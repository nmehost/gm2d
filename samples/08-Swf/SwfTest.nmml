	 <asset name="tests/GradientFillMotion.swf"/>
	 <asset name="tests/ShapeMorph.swf"/>
	</assets>

  
  <classpath name="../.." />
  <haxelib name="nme" />

  <ndll name="nme" haxelib="nme" nekoapi="1"/>
